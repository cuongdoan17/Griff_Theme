<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <referenceContainer name="main">
                <container name="main.container" htmlClass="main-container" htmlTag="div" before="main.content">
                    <block class="Magento\Framework\View\Element\Template" name="banner" template="Magento_Cms::banner.phtml"/>
                    <block class="Magento\Framework\View\Element\Template" name="post" template="Magento_Cms::post.phtml"/>
                </container>
            </referenceContainer>
        </referenceContainer>
    </body>
</page>
